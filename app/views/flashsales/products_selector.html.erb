<div class="row-fluid sortable">
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2><i class="icon-picture"></i>商品列表</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			  	<table class="table table-striped table-bordered bootstrap-datatable datatable">
				  <thead>
					  <tr>
					  	  <th>选择</th>
						  <th>产品id</th>
						  <th>商品名称</th>
						  <th>商品类型</th> 
						  <th>价格</th>
						  <th>剩余库存</th> 
					  </tr>
				  </thead>   
				  <tbody>
					<% @products.each do |product| %>
					<tr>
						<td class="center"><input id="product_selected" name="product_selected" type="checkbox" value="<%= product.entity_id %>"></td>
						<td><%= product.entity_id %></td>
						<td  class="center"><%= attribute_values[:name][product.entity_id] %><input type="hidden" id="name_<%= product.entity_id %>" value="<%= attribute_values[:name][product.entity_id] %>"/></td>
						<td class="center">产品</td>
						<td class="center"><%= attribute_values[:price][product.entity_id] %><input type="hidden" id="price_<%= product.entity_id %>" value="<%= attribute_values[:price][product.entity_id] %>" /></td>
						<td class="center"><%= attribute_values[:qty][product.entity_id] %><input type="hidden"  id="qty_<%= product.entity_id %>" value="<%= attribute_values[:qty][product.entity_id] %>" /></td> 
					</tr>
                    <% end %>
				  </tbody>
			  </table>
			  <br />
			  <button  id="add-selected-products" class="btn btn-primary">添加</button>
		</div>
	</div><!--/span-->

</div>
