<%= render 'layouts/topbar' %>

	<div class="container-fluid">
	<div class="row-fluid">

		<%= render 'layouts/leftmenu' %>

		<%= render 'layouts/noscript_warning' %>
		
		<div id="content" class="span10">
		<!-- content starts -->
		

		<div>
			<ul class="breadcrumb">
				<li>
					<a href="/main">主页</a> <span class="divider">/</span>
				</li>
				<li>
					<a href="#">订单列表</a>
				</li>
			</ul>
		</div>

		<div class="row-fluid sortable">
			<div class="box span12">
				<div class="box-header well" data-original-title>
					<h2><i class="icon-picture"></i>订单列表</h2>
					<div class="box-icon">
						<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
						<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
						<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
					</div>
				</div>
				<div class="box-content">
					  	<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>订单id</th>
								  <th>订单时间</th>
							  	  <th>客户</th>
								  <th>总价</th>
								  <th>状态</th>
								  <th>操作</th>
							  </tr>
						  </thead>
						  <tbody>
							<% @salesOrders.each do |salesOrder| %>
							<tr>
								<td><%= salesOrder.entity_id %></td>
								<td class="center"><%= salesOrder.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
								<td class="center"><%= salesOrder.customer_name %></td>
								<td class="center"><%= salesOrder.grand_total %></td>
								<td class="center"><%= status[salesOrder.status.to_i] %></td>
								<td class="center">
									<a class="btn btn-success" href="#">
										<i class="icon-zoom-in icon-white"></i>  
										查看                                            
									</a>
									<% if salesOrder.status.to_i == 5 %>
									<a class="btn btn-success" href="#">
										<i class="icon-zoom-in icon-white"></i>  
										发货                                            
									</a>
									<% end %>
								</td>
							</tr>
                            <% end %>
						  </tbody>
					  </table>
					  <br />
				</div>
			</div><!--/span-->
		
		</div><!--/row-->


				<!-- content ends -->
		</div><!--/#content.span10-->
			</div><!--/fluid-row-->
			
	<hr>

	<div class="modal hide fade" id="myModal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>设置</h3>
		</div>
		<div class="modal-body">
			<p>可配置属性</p>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">关闭</a>
			<a href="#" class="btn btn-primary">保存修改</a>
		</div>
	</div>

    <%= render 'layouts/footer' %>
	
</div><!--/.fluid-container-->
